{
  "name": "tweetyourbracket-api",
  "description": "The master and entries API for tweetyourbracket.com.",
  "version": "1.0.0",
  "author": {
    "name": "Luke Karrys",
    "email": "luke@lukekarrys.com",
    "url": "http://lukekarrys.com"
  },
  "bugs": {
    "url": "https://bitbucket.org/lukekarrys/api/issues"
  },
  "dependencies": {
    "@lukekarrys/entry-watcher": "^5.0.4",
    "@lukekarrys/score-watcher": "^5.2.0",
    "async": "^2.1.4",
    "bracket-data": "^4.4.0",
    "bracket-updater": "^3.4.0",
    "bucker": "^1.1.1",
    "getconfig": "^3.0.0",
    "lodash": "^4.17.2",
    "pg": "^6.1.0",
    "yargs": "^6.4.0"
  },
  "devDependencies": {
    "@lukekarrys/eslint-config": "^2.1.11",
    "bracket-generator": "^3.1.0",
    "eslint": "^3.11.1",
    "eslint-plugin-import": "^2.2.0",
    "git-validate": "^2.2.2",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^3.1.1",
    "request": "^2.79.0",
    "rimraf": "^2.5.4",
    "scores": "^3.3.0"
  },
  "engines": {
    "node": "^6"
  },
  "homepage": "https://bitbucket.org/lukekarrys/api",
  "keywords": [
    "bracket",
    "ncaa",
    "tweetyourbracket"
  ],
  "license": "UNLICENSED",
  "main": "index.js",
  "pre-commit": [
    "lint",
    "validate"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://bitbucket.org/lukekarrys/api.git"
  },
  "scripts": {
    "db:clean": "npm run db:drop && npm run db:create && npm run db:seed",
    "db:commit": "npm run db:dump && git commit sql/tweetyourbracket.sql -m \"update sql `date +%Y-%m-%dT%H:%M:%S%z`\"",
    "db:create": "psql -d postgres -c \"CREATE ROLE tweetyourbracket WITH PASSWORD 'password' NOSUPERUSER NOCREATEDB NOCREATEROLE INHERIT LOGIN\" && createdb tweetyourbracket -O tweetyourbracket",
    "db:drop": "dropdb --if-exists tweetyourbracket && psql -d postgres -c 'DROP ROLE IF EXISTS tweetyourbracket'",
    "db:dump": "pg_dump tweetyourbracket > sql/tweetyourbracket.sql",
    "db:seed": "psql -d tweetyourbracket -f sql/tweetyourbracket.sql",
    "export:dir": "rimraf .export/ && node bin/export.js",
    "lint": "eslint .",
    "pm2:delete": "pm2 delete pm2.json",
    "pm2:logs": "pm2 logs pm2.json",
    "pm2:restart": "pm2 restart pm2.json",
    "pm2:start": "pm2 start pm2.json",
    "pm2:stop": "pm2 stop pm2.json",
    "prod:update:men": "NODE_ENV=production ./bin/insertBracket.js --year=`date +%Y` --sport=ncaam --date `date +%Y%m%d`",
    "prod:update:women": "NODE_ENV=production ./bin/insertBracket.js --year=`date +%Y` --sport=ncaaw --date `date +%Y%m%d`",
    "start:entries": "node watchers/entries",
    "start:scores": "node watchers/scores",
    "validate": "npm ls"
  }
}
