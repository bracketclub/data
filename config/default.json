{
  "isDev": true,

  "watchers": {
    "logOptions": {
      "level": "info",
      "console": {
        "color": true
      },
      "app": {
        "file": false
      }
    },
    "finder": {
      "domain": "bracket.club",
      "tags": ["bracketclub"]
    }
  },

  "postgres": "postgres://lukekarrys@localhost/bracketclub",

  "twitter": {
    "consumer_key": "$$TWITTER_KEY",
    "consumer_secret": "$$TWITTER_SECRET",
    "access_token": "$$TWITTER_TOKEN",
    "access_token_secret": "$$TWITTER_TOKEN_SECRET"
  },

  "scores": {
    "ncaaw": {
      "interval": "1m",
      "url": "http://espn.go.com/womens-college-basketball/scoreboard/_/group/100/date/{date}",
      "parse": {
        "finalPeriod": 4,
        "periodLength": "10m"
      }
    },
    "ncaam": {
      "interval": "1m",
      "url": "http://espn.go.com/mens-college-basketball/scoreboard/_/group/100/date/{date}",
      "parse": {
        "finalPeriod": 2,
        "periodLength": "20m"
      }
    },
    "nba": {
      "interval": "1m",
      "url": "http://www.espn.com/nba/scoreboard/_/date/{date}",
      "parse": {
        "finalPeriod": 4,
        "periodLength": "12m"
      }
    },
    "nhl": {
      "interval": "1m",
      "url": "http://www.espn.com/nhl/scoreboard/_/date/{date}",
      "parse": {
        "finalPeriod": 3,
        "periodLength": "20m"
      }
    }
  }
}

